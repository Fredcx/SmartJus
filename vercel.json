{
    "version": 2,
    "functions": {
        "api/index.ts": {
            "includeFiles": "node_modules/puppeteer-extra-plugin-*/**"
        }
    },
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/index.ts"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ],
    "crons": [
        {
            "path": "/api/tracking/check-all",
            "schedule": "0 8 * * *"
        }
    ]
}